{
  "name": "gmail-bill-scanner",
  "displayName": "Gmail Bill Scanner",
  "version": "0.0.1",
  "description": "Scans, extracts bills from Gmail to Google Sheet",
  "author": "Whiteclay.io",
  "scripts": {
    "dev": "webpack --watch --mode=development",
    "build": "webpack --mode=production",
    "postbuild": "node fix-csp.js",
    "package": "npm run build && cd dist && zip -r ../extension.zip *",
    "test": "echo \"Error: no test specified\" && exit 1",
    "update-schema": "node schema/schema-updater.js",
    "diff-schema": "node schema/schema-diff.js",
    "update-schema:mcp": "node schema/mcp-schema-updater.js",
    "test-schema:mcp": "node schema/test-mcp-updater.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.313.0",
    "pdfjs-dist": "^5.2.133",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/plugin-transform-runtime": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.27.0",
    "@babel/runtime": "^7.27.0",
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^9.2.1",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.11.0",
    "dotenv": "^16.4.7",
    "html-webpack-plugin": "^5.6.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "mini-css-extract-plugin": "^2.9.2",
    "postcss": "^8.5.3",
    "postcss-loader": "^7.3.4",
    "prettier": "3.2.4",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.4.17",
    "typescript": "5.3.3",
    "webpack": "^5.99.2",
    "webpack-cli": "^5.1.4"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "storage",
      "identity"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "node schema/check-schema.js"
    ]
  }
}
