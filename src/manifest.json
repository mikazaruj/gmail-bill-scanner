{
  "manifest_version": 3,
  "name": "Gmail Bill Scanner",
  "version": "1.0.0",
  "description": "Automatically extracts bill information from Gmail emails",
  "icons": {
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "identity",
    "alarms",
    "windows",
    "offscreen"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://www.googleapis.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "pdfWorker.js",
        "pdf-processor.html",
        "workers/pdf-worker.js",
        "js/pdf-processor-ui.js",
        "lib/pdf.js",
        "lib/pdf.worker.js",
        "offscreen-pdf-processor.html",
        "js/offscreen-pdf-processor.js"
      ],
      "matches": ["https://mail.google.com/*", "<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; worker-src 'self'"
  }
} 